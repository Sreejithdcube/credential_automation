      "version": "0.2.0",
      "configurations": [
        
        {
          "type": "node",
          "request": "launch",
          "name": "Debug in Chromium",
          "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
          "args": [
            "test",
            "--browser=chromium",
            "--workers=1",
            "--headed",    // Shows browser window
            "--debug"     // Enables debugging
          ],
          "console": "integratedTerminal",
          "skipFiles": ["<node_internals>/**"]
        }
      ]
    }